#%RAML 1.0
title: Example API
description: This is the _Example API_.
version: v2
baseUri: https://api.example.com/{version}
baseUriParameters:
    version:
        description: The version of the API.
protocols: [ HTTP, HTTPS ]
mediaType:  application/json
documentation:
securitySchemes:
  oauth_2_0: !include securitySchemes/oauth_2_0.raml
  oauth_1_0: !include securitySchemes/oauth_1_0.raml
securedBy: [ oauth_2_0, oauth_1_0 ]

types:
  Org:
    type: object
    properties:
      onCall: AlertableAdmin
      Head: Manager
  Person:
    type: object
    properties:
      firstname: string
      lastname:  string
      title?:    string
  Phone:
    type: string
    pattern: "[0-9|-]+"
  Manager:
    type: Person
    properties:
      reports: Person[]
      phone:  Phone
  Admin:
    type: Person
    properties:
      clearanceLevel:
        enum: [ low, high ]
  AlertableAdmin:
    type: Admin
    properties:
      phone: Phone
  Alertable: Manager | AlertableAdmin

Pet:
    properties:
      name: string
      kind: string
      price: number
      metrics?: Metrics
      color:
        enum:
          - Black
          - White
          - Colored
    example:
      name: "Snoopy"
      kind: "Mammal"
      price: 100
      color: Black
Org:
    type: object
    properties:
      onCall: AlertableAdmin
      Head: Manager
Person:
    type: object
    properties:
      firstname: string
      lastname:  string
      title?:    string
Phone:
    type: string
    pattern: "[0-9|-]+"
Manager:
    type: Person
    properties:
      reports: Person[]
      phone:  Phone
Admin:
    type: Person
    properties:
      clearanceLevel:
        enum: [ low, high ]
AlertableAdmin:
    type: Admin
    properties:
      phone: Phone
Alertable: Manager | AlertableAdmin

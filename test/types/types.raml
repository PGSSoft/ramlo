Org:
    type: object
    properties:
      onCall: AlertableAdmin
      Head: Manager
Person:
    type: object
    properties:
      firstname: string
      lastname:  string
      title?:    string
Phone:
    type: string
    pattern: "[0-9|-]+"
Manager:
    type: Person
    properties:
      reports: Person[]
      phone:  Phone
Admin:
    type: Person
    properties:
      clearanceLevel:
        enum: [ low, high ]
AlertableAdmin:
    type: Admin
    properties:
      phone: Phone
Alertable: Manager | AlertableAdmin
doctype html
html(lang="en")
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(http-equiv='x-ua-compatible', content='ie=edge')

        title #{apiTitle} :: generated by ramlo

        style(type='text/css')
            include main.css
    body
        header(class='header')
            .container
                h1(class='header__title')= apiTitle
                p(class='header__subtitle')= apiDescription
        main
            .container
                .row
                    .col-md-3
                        section(class='resources')
                            h1(class='resources__header') Resources
                            ul(class='resources__list')
                                each resource in apiResources
                                    li= resource.name
                    .col-md-9
                        .row
                            .col-md-8
                                each resource in apiResources
                                    section(class='documentation')
                                        h1(class='documentation__header')= resource.name
                                            span(class='text-muted')= resource.uri

                                        each method in resource.methods
                                            ul(class='documentation__endpoints')
                                                li
                                                    case method.name
                                                        when 'get': span(class='label label-primary')= method.name
                                                        when 'post': span(class='label label-success')= method.name
                                                        when 'put': span(class='label label-warning')= method.name
                                                        when 'delete': span(class='label label-danger')= method.name
                                                    = resource.uri

                                            h2(class='documentation__subheader') Query Parameters
                                            table(class='documentation__parameters table table-bordered table-striped')
                                                thead
                                                    tr
                                                        th name
                                                        th type
                                                tbody
                                                    tr
                                                        each parameter in method.parameters
                                                            td= parameter.name
                                                            td= parameter.type
                            .col-md-4
                                // TODO
        footer(class='footer')
            .container
                p(class='footer__text') ramlo | &copy; 2016